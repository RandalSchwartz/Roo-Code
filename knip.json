{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"ignore": [
		"**/__tests__/**",
		"apps/vscode-e2e/**",
		"src/extension/api.ts",
		"src/activate/**",
		"src/workers/countTokens.ts",
		"src/extension.ts",
		"scripts/**",
		"src/services/code-index/workers/embedding.worker.ts",
		"src/services/code-index/workers/file-processor.worker.ts"
	],
	"workspaces": {
		"src": {
			"entry": ["extension.ts"],
			"project": ["**/*.ts"]
		},
		"webview-ui": {
			"entry": ["src/index.tsx"],
			"project": ["src/**/*.{ts,tsx}"]
		},
		"packages/{build,cloud,evals,ipc,telemetry,types}": {
			"project": ["src/**/*.ts"]
		}
	}
}
